<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EFCoreWithAsp.netCore</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EFCoreWithAsp.netCore.styles.css" asp-append-version="true" />

    <!-- Render Styles Section If Defined -->
    @if (IsSectionDefined("Styles"))
    {
        @RenderSection("Styles")
    }

    <style>
      

        .container {
            padding: 20px;
        }

        h1 {
            color: #2c3e50; /* Chữ màu đen */
        }

        /* Đảm bảo căn giữa tiêu đề */
        .header {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100px; /* Bạn có thể điều chỉnh chiều cao này */
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Căn giữa tiêu đề -->
        <div class="header">
            <h1 class="text-white mb-4 custom-shadow"></h1>
        </div>
        <!-- Nội dung trang con sẽ được hiển thị tại đây -->
        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false)

    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
