@model TeacherViewModel
@{
    ViewData["Title"] = "Edit Teacher details";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-12 text-center">
            <h3 style="color: #6c5ce7; font-weight: bold;">Edit Employee Details</h3>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="p-4" style="background-color: #f4f0fc; border-radius: 10px;">
                <form asp-action="Edit" asp-controller="Teacher" method="post">
                    <input hidden asp-for="TeacherId" />
                    <div class="mb-3">
                        <label for="FirstName" class="form-label fw-bold" style="color: #6c5ce7;">First Name</label>
                        <input asp-for="FirstName" type="text" class="form-control" style="border-color: #6c5ce7;">
                    </div>
                    <div class="mb-3">
                        <label for="LastName" class="form-label fw-bold" style="color: #6c5ce7;">Last Name</label>
                        <input asp-for="LastName" type="text" class="form-control" style="border-color: #6c5ce7;">
                    </div>
                    <div class="mb-3">
                        <label for="datetimepicker" class="form-label fw-bold" style="color: #6c5ce7;">Date of Birth</label>
                        <input asp-for="DateOfBirth" type="date" class="form-control" style="border-color: #6c5ce7;" name="DateOfBirth" />
                    </div>
                    <div class="mb-3">
                        <label for="Gender" class="form-label fw-bold" style="color: #6c5ce7;">Gender</label>
                        <div class="d-flex">
                            <div class="form-check px-4">
                                <input asp-for="Gender" class="form-check-input" value="male" type="radio" name="Gender">
                                <label class="form-check-label fw-bold" for="Gender" style="color: #6c5ce7;">
                                    Male
                                </label>
                            </div>
                            <div class="form-check px-4">
                                <input asp-for="Gender" class="form-check-input" value="female" type="radio" name="Gender">
                                <label class="form-check-label fw-bold" for="Gender" style="color: #6c5ce7;">
                                    Female
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="Email" class="form-label fw-bold" style="color: #6c5ce7;">Email</label>
                        <input asp-for="Email" type="email" class="form-control" style="border-color: #6c5ce7;">
                    </div>
                    <div class="mb-3">
                        <label for="PhoneNumber" class="form-label fw-bold" style="color: #6c5ce7;">Phone Number</label>
                        <input asp-for="PhoneNumber" type="number" class="form-control" style="border-color: #6c5ce7;">
                    </div>
                    <div class="mb-3">
                        <label for="Address" class="form-label fw-bold" style="color: #6c5ce7;">Address</label>
                        <textarea asp-for="Address" class="form-control" rows="3" style="border-color: #6c5ce7;"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="Salary" class="form-label fw-bold" style="color: #6c5ce7;">Salary</label>
                        <textarea asp-for="Salary" class="form-control" rows="3" style="border-color: #6c5ce7;"></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold" style="color: #6c5ce7;">Please choose department</label>
                        <select asp-for="DepartmentId" asp-items="ViewBag.Departments" class="form-control" style="border-color: #6c5ce7;"></select>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" id="isActive">
                            <label class="form-check-label fw-bold" for="isActive" style="color: #6c5ce7;">Mark as Active</label>
                        </div>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn" style="background-color: #6c5ce7; color: white; font-weight: bold;">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f5ff;
    }

    .btn:hover {
        background-color: #4b42ad;
        transition: background-color 0.3s ease-in-out;
    }

    .form-control:focus {
        border-color: #6c5ce7;
        box-shadow: 0px 0px 5px #b2a3f5;
    }
</style>
