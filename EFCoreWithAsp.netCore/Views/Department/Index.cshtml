@model IEnumerable<DepartmentViewModel>
@{
    ViewData["Title"] = "All Course";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-12 text-center">
            <h3 style="color: #6c5ce7; font-weight: bold;">All Course</h3>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="table-responsive">
                <table class="table table-hover" style="background-color: #f4f0fc; border-radius: 10px;">
                    <thead style="background-color: #6c5ce7; color: white;">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Course</th>
                            <th scope="col" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var department in Model)
                        {
                            <tr>
                                <th scope="row">@department.DepartmentId</th>
                                <td>@department.Name</td>
                                <td class="text-center">
                                    <a class="btn btn-light border" asp-action="Edit" asp-controller="Department" asp-route-id="@department.DepartmentId" style="color: #6c5ce7; font-weight: bold; margin-right: 5px;">Edit</a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Department" asp-route-id="@department.DepartmentId" onClick="return confirm('Are you sure you want to delete this department?')" style="font-weight: bold;">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="card shadow-sm mt-4" style="width: 24rem; margin: auto;">
    <div class="card-body text-center" style="background-color: #eae6f8; border-radius: 10px;">
        <h5 class="card-title" style="color: #6c5ce7; font-weight: bold;">Welcome Home</h5>
        <p class="card-text" style="color: #636e72;">Discover the details of your home</p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-light border" style="color: #6c5ce7; font-weight: bold;">Go Home</a>
    </div>
</div>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f5ff;
    }

    .btn:hover {
        background-color: #4b42ad;
        transition: background-color 0.3s ease-in-out;
    }

    .table-hover tbody tr:hover {
        background-color: #eae6f8;
    }
</style>
